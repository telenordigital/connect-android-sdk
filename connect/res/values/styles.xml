<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="com_telenor_connect_light_gray">#d3d3d3</color>
    <color name="com_telenor_connect_dark_gray">#444</color>
    <color name="com_telenor_connect_darker_gray">#222</color>
    <color name="com_telenor_connect_darker_gray_transparent">#80222222</color>
    <color name="com_telenor_connect_light_color">#fff</color>
    <color name="com_telenor_connect_medium_blue">#007AD0</color>
    <color name="com_telenor_connect_text_dark">#1A1A1A</color>
    <color name="com_telenor_connect_text_gray_divider">#979797</color>

    <style name="com_telenor_ConnectButton.Dark" parent="com_telenor_ConnectButton">
        <item name="android:background">@drawable/connect_btn_dark_selector</item>
        <item name="android:textColor">@color/com_telenor_connect_light_color</item>
    </style>

    <style name="com_telenor_ConnectButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/connect_btn_light_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/com_telenor_connect_dark_gray</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="com_telenor_popup_animation">
        <item name="android:windowEnterAnimation">@anim/bottom_up_animation</item>
        <item name="android:windowExitAnimation">@anim/bottom_down_animation</item>
    </style>

    <style name="ConnectTheme.Dark" parent="ConnectTheme">
        <item name="colorAccent">@color/com_telenor_connect_light_color</item>
        <item name="android:buttonStyle">@style/com_telenor_ConnectButton.Dark</item>
    </style>

    <style name="ConnectTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/com_telenor_connect_darker_gray</item>
        <item name="android:buttonStyle">@style/com_telenor_ConnectButton</item>
    </style>

</resources>
