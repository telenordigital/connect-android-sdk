<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TurnOnMobileDataDialogFragment"
    android:paddingBottom="16dp"
    >

    <TextView
        android:id="@+id/com_telenor_connect_fragment_turn_on_mobile_data_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/com_telenor_turn_on_mobile_data_header"
        android:textColor="@color/com_telenor_connect_text_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/com_telenor_turn_on_mobile_data_text1"
        android:textColor="@color/com_telenor_connect_text_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_header" />

    <TextView
        android:id="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/com_telenor_turn_on_mobile_data_text2"
        android:textColor="@color/com_telenor_connect_text_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_1"
        app:layout_constraintStart_toStartOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_1"
        app:layout_constraintTop_toBottomOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_1" />

    <Button
        android:id="@+id/com_telenor_connect_fragment_turn_on_mobile_data_sign_in_automatically_button"
        android:theme="@style/ConnectTheme.Button.Blue"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/com_telenor_signin_automatically"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_2"
        app:layout_constraintStart_toStartOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_2"
        app:layout_constraintTop_toBottomOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_paragraph_2"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/com_telenor_divider_or"
        android:textColor="@color/com_telenor_connect_text_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_sign_in_automatically_button"
        />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/com_telenor_connect_text_gray_divider"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_sign_in_automatically_button"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/com_telenor_connect_text_gray_divider"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/com_telenor_connect_fragment_turn_on_mobile_data_sign_in_automatically_button"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <Button
        android:id="@+id/com_telenor_connect_fragment_turn_on_mobile_data_sign_in_regular_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/com_telenor_regular_signin"
        android:textColor="@color/com_telenor_connect_medium_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.ConstraintLayout>
